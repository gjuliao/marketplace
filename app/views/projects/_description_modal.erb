<%= turbo_frame_tag :remote_modal, target: :_top do %>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="bs-modal">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_with model: @project, url: '#' do |form| %>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        
                                 <div class="form-group">
                                    <%= form.label :name, class: "my-2" %>
                                    <%= form.text_field :name, class: "form-control", required: true %>
                                </div>

                                <div class="form-group">
                                    <%= form.label :built_with, class: "my-2" %>
                                    <%= form.text_field :built_with, class: "form-control", required: true %>
                                </div>

                                <div class="form-group">
                                    <%= form.label :description, class: "my-2" %>
                                    <%= form.text_area :description, class: "form-control", required: true %>
                                </div>

                                <div class="form-group">
                                    <%= form.label :url, class: "my-2" %>
                                    <%= form.text_field :url, class: "form-control", required: true %>
                                </div>

                                <div class="form-group">
                                    <%= form.label :price, class: "my-2" %>
                                    <%= form.number_field :price, class: "form-control", required: true %>
                                </div>
                        <div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <%= form.submit 'SaveChanges', data: { action: 'click->bs-modal#submitEnd' } %>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        <% end %>
        </div>
    </div>
    </div>
<% end %>